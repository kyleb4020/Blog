@model Blog.Models.Topics

@{
    ViewBag.Title = "Delete";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
            <h2>Delete</h2>

            <h3>Are you sure you want to delete this Topic?</h3>
            <hr />

            <h4>@Html.DisplayFor(model => model.Name)</h4>

            <h5>Tagged Blogs:</h5>
            @foreach(var b in Model.Blogs)
            {
                <p style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">&nbsp;&nbsp;&bull;&nbsp;@Html.DisplayFor(m=>b.Title)</p>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn links-btn" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn links-btn" })
                </div>
            }
        </div>
    </div>
</div>
