@model Blog.Models.EmailModel
@{
    ViewBag.Title = "Contact";
}

<div class="container-fluid backdrop-gradient">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-1">
            <h2>@ViewBag.Title</h2>
            <h3>@ViewBag.Message</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h4>Enter your name and email below and I will get in touch with you</h4>
                <hr />
                <p style="font-weight:bold; color:lime;">@ViewBag.StatusMessage</p>
                @Html.ValidationSummary("",new { @class = "text-danger"})
                <div class="form-group">
                    @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" }) 
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" }) 
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })
                        @Html.ValidationMessageFor(m => m.FromEmail)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn links-btn" value="Send" />
                    </div>
                </div>
            }

            @*<p>I'd be happy to receive an email from you if you feel that you have something you wish to say to me. I'm always interested in fan-mail so don't hold back if you're a fan.</p>
            <p>If you're interested in learning more about who I am and what I'm about, I suggest you check out <a href="https://kbartholomew-portfolio.azurewebsites.net" class="links"><u>my portfolio</u></a>.</p>

            <address>
                <strong>Email:</strong>   <a href="mailto:kyle.r.bartholomew@gmail.com" class="links">kyle.r.bartholomew@gmail.com</a><br />
            </address>*@
        </div>
    </div>
</div>
